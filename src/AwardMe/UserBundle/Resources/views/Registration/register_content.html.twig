{% trans_default_domain 'FOSUserBundle' %}`

<h2 class="zone">Zone d'inscription</h2>

<div id="fos-register">

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_errors(form) }}

    <div class="error">{{ form_errors(form.username) }}</div>
    {{ form_widget(form.username, {'attr': {'class': 'signin', 'placeholder': 'Nom d\'utilisateur'}}) }}

    <div class="error">{{ form_errors(form.email) }}</div>
    {{ form_widget(form.email, {'attr': {'class': 'signin', 'placeholder': 'votre-email@mail.com'}}) }}

    <div class="error">{{ form_errors(form.plainPassword.first) }}</div>
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'signin', 'placeholder': 'Mot de passe'}}) }}

    <div class="error">{{ form_errors(form.plainPassword.second) }}</div>
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'signin', 'placeholder': 'Confirmation'}}) }}

    {{ form_rest(form) }}

    <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="signin-sub"/>
    </div>
</form>

</div>